{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "BedrockAgentPermissions",
            "Effect": "Allow",
            "Action": [
                "bedrock:CreateKnowledgeBase",
                "bedrock:CreateDataSource",
                "bedrock:StartIngestionJob"
            ],
            "Resource": "*"
        },
        {
            "Sid": "PassRolePermission",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "arn:aws:iam::183150676819:role/BedrockKBRole"
        }
    ]
}